@using PrijemniMVC.Models.VM
@model StudentInsertUpdateVM
@{
    ViewData["Title"] = @Model.PkStudentId==0? "Dodavanje studenta" : "Uređivanje podataka";
}
<h1>@(Model.PkStudentId==0? "Dodavanje studenta":"Uređivanje podataka")</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.PkStudentId != null)
            {
                 <input type="hidden" asp-for="PkStudentId" />
            }
           
            <div class="form-group p-2">
                <label asp-for="BrojIndeksa" class="control-label"></label>
                <input asp-for="BrojIndeksa" class="form-control" />
                <span asp-validation-for="BrojIndeksa" class="text-danger"></span>
            </div>
            <div class="form-group p-2">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
               
            </div>
            <div class="form-group p-2">
                <label asp-for="Prezime" class="control-label"></label>
                <input asp-for="Prezime" class="form-control" />
               
            </div>
            <div class="form-group p-2">
                <label asp-for="Godina" class="control-label"></label>
                <input asp-for="Godina" class="form-control" />
                <span asp-validation-for="Godina" class="text-danger"></span>
               
            </div>
            <div class="form-group p-2">
                <label asp-for="StatusStudenta" class="control-label"></label>
                
                 @Html.DropDownListFor(model => model.StatusStudenta, new SelectList(Model.Statusi, "Value", "Text"), new { @class = "form-control" })
                <span asp-validation-for="StatusStudenta" class="text-danger"></span> 
            </div>
            <div class="form-group p-2 row" >
                <div class="col-6">
                    <button type="submit"  class="btn btn-success form-control">@(Model.PkStudentId==0? "Dodaj" : "Sačuvaj")</button>
                </div>
                <div class="col-6">
                     <a class="btn btn-secondary form-control" asp-action="Index">Nazad na listu</a>
                </div>                
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

