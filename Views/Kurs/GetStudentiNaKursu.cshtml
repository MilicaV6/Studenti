@model IEnumerable<PrijemniMVC.Models.Student>

@{
    ViewData["Title"] = "Studenti na kursu";
}
 <br />
 <br />
<div class="container" style="width:90%">
    <div class="row">
        <div class="col-6">
            <h1>Studenti na kursu</h1>
        </div>
        <div class="col-6 text-end p-2">
            <a class="btn btn-secondary" asp-action="Index">Nazad</a>
        </div>
    </div>
        <br />
        <br />
        <table class="table table-striped table-bordered text-center">
            <thead class="bg-primary text-white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BrojIndeksa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prezime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Godina)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusStudentaProperty.NazivStatusa)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrojIndeksa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prezime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Godina)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusStudentaProperty.NazivStatusa)
                        </td>
                        <td>
                            <a class="btn btn-primary " asp-controller="Students" asp-action="Details" asp-route-id="@item.PkStudentId">Detalji</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

</div>





